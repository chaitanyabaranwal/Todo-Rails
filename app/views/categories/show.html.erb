<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @category.description %>
</p>

<h3>Products in this category</h3>
<% Task.where(category_id: @category.id).each do |task| %>
