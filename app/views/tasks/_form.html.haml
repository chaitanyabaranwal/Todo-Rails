.modal-header
  %h1 New Task
= simple_form_for task, class: 'clearfix', remote: true do |f|
  .modal-body
    = f.input :name
    = f.input :due_date, as: :string, input_html: {class: 'datepicker'}
    = f.input :completed
    = select_tag :category_id, options_for_select(@categories), :prompt => 'Select!'
  .modal-footer
    = f.submit 'Save', class: 'btn btn-primary'
