.modal-dialog
  .modal-content
    .modal-header
      %h2
        = task.new_record? ? 'New Task' : 'Edit Task'
    = simple_form_for task, class: 'clearfix', remote: true do |f|
      .modal-body
        = f.input :name
        = f.input :due_date, as: :string, input_html: {class: 'datepicker'}
        = f.input :completed
        = f.input :category_ids, collection: @categories, input_html: {multiple: true}, label: 'Categories', required: true
      .modal-footer
        = f.submit 'Save', class: 'btn btn-primary'
