- if tasks.empty?
  %span.text-warning There are no tasks!
- else
  %table.table.table-hover
    %thead
      %tr
        %th Name
        %th Due Date
        %th Category
        %th Completed
        %th
        %th
    %tbody
      - tasks.each do |task|
        %tr
          %td
            %strong= task.name
          %td.text-info= task.due_date
          %td= - Category.find(task.category_id).name
          %td.text-success= task.completed
          %td
            = link_to task_path(task), remote: true, method: :delete, data: {confirm: "Are you sure you want to delete task '#{task.name}'?"} do
              %i.icon-remove
          %td
            = link_to edit_task_path(task), remote: true do
              %i.icon-edit